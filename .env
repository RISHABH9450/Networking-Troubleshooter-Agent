# FastAPI
APP_NAME=Networking Troubleshooter Agent
APP_ENV=production
APP_VERSION=1.0
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:5173,https://yourdomain.com

# Rate limits
RATE_HEALTH=20/minute
RATE_DIAGNOSE=10/minute
RATE_REPORT=6/minute

# Timeouts (seconds)
HTTP_TIMEOUT=5
PING_TIMEOUT=2
SSL_TIMEOUT=5
TRACEROUTE_TIMEOUT=20

# Cache (Redis)
REDIS_URL=redis://redis:6379/0
TTL_DNS=300
TTL_HTTP=60
TTL_SSL=300
TTL_GEOIP=86400

# Optional Portia
PORTIA_API_KEY=

# GeoIP provider
GEOIP_BASE=https://ipapi.co